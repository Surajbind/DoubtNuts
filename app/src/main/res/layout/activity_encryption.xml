<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_vertical"
    android:gravity="start"
    android:background="@drawable/bg"
    android:orientation="vertical"
    tools:context=".EncryptionActivity">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="15dp"
        android:fontFamily="@font/spartan_bold"
        android:text="Encrypt Message"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/encryptVar1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:textColor="@color/white"
            android:background="@drawable/edtext_shape"
            android:fontFamily="@font/spartan_regular"
            android:gravity="center"
            android:hint="Type Here..."
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/encryptbtVar1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="@drawable/send_btn"
            android:onClick="encyptMethod"
            app:backgroundTint="@color/white" />


    </LinearLayout>

    <TextView
        android:id="@+id/encrypttvVar1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/spartan_bold"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/white"
        android:textSize="15dp" />

    <Button
        android:id="@+id/encyptbtCopy"
        android:layout_width="105dp"
        android:text="Copy "
        android:textColor="@color/blue"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:onClick="copyEncrypt"
        app:backgroundTint="@color/white" />



    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="90dp"
        android:layout_marginBottom="10dp"
        android:fontFamily="@font/spartan_bold"
        android:text="Decrypt Message"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/decetVar1"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:background="@drawable/edtext_shape"
            android:fontFamily="@font/spartan_regular"
            android:gravity="start"
            android:hint="Type Here..."
            android:padding="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textSize="14dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/debtVar1"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_margin="3dp"
            android:background="@drawable/send_btn"
            android:onClick="decryptMethod"
            app:backgroundTint="@color/blue" />

    </LinearLayout>

    <TextView
        android:id="@+id/detvVar2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:fontFamily="@font/spartan_bold"
        android:padding="15dp"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="15dp" />

    <Button
        android:id="@+id/decbtVar2"
        android:layout_width="105dp"
        android:layout_height="35dp"
        android:layout_gravity="center"
        android:layout_margin="3dp"
        android:text="Copy "
        android:onClick="copyDecrypt"
        android:textColor="@color/white"
        app:backgroundTint="@color/blue" />

</LinearLayout>