<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg"
    tools:context=".Dash_BoardActivity">


    <LinearLayout
        android:layout_width="318dp"
        android:layout_height="504dp"
        android:layout_marginTop="30dp"
        android:orientation="vertical"
        android:background="@drawable/edtext_btn"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:background="@color/blue"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/qr_scanner"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:layout_gravity="center"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/blue">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_qrcode" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spartan_bold"
                    android:text="QR Code"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/web_view"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/blue">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_pdf" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spartan_bold"
                    android:text="Web to Pdf"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/todo"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/light_blue_200">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_todo" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spartan_bold"
                    android:text="Todo List"
                    android:background="@color/light_blue_200"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:elevation="5dp"
                android:orientation="vertical">

                <androidx.cardview.widget.CardView
                    android:id="@+id/encryption"
                    android:layout_width="160dp"
                    android:layout_height="150dp"
                    android:elevation="5dp"
                    app:cardBackgroundColor="@color/blue">

                    <ImageView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_gravity="center"
                        android:src="@drawable/ic_lock" />


                </androidx.cardview.widget.CardView>


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/spartan_bold"
                    android:text="Encryption"
                    android:textColor="@color/white"
                    android:textAlignment="center"
                    android:textSize="17sp" />
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/wiki"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="5dp"
                app:cardBackgroundColor="@color/light_blue_200">

                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="125dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_http" />

            </androidx.cardview.widget.CardView>


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/spartan_bold"
                android:background="@color/light_blue_200"
                android:text="Search on Google"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:textSize="17sp" />
        </LinearLayout>

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>